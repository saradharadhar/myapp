<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffebcd"
    android:orientation="vertical"
    tools:context=".shopPage">
    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.96">

            <ImageButton
                android:id="@+id/dogbone"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1"
                app:srcCompat="@drawable/dogbone" />

            <TextView
                android:id="@+id/spas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Dogbone"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/doghat"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0"
                app:layout_rowWeight="1"
                app:srcCompat="@drawable/doghat" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Red hat"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/dogjumper"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="3"
                app:layout_rowWeight="1"
                app:srcCompat="@drawable/dogjumper" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Jumper"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="4"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/dogballs"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="3"
                app:layout_rowWeight="1"
                app:srcCompat="@drawable/dogballs" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="ball"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="4"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/dogjacket"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="5"
                app:layout_rowWeight="1"
                app:srcCompat="@drawable/dogjacket" />

            <ImageButton
                android:id="@+id/dogfood"
                android:layout_width="25dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="5"
                app:layout_rowWeight="1"
                app:srcCompat="@drawable/dogfood" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Jacket"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="6"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Food"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="6"
                app:layout_rowWeight="1" />



        </android.support.v7.widget.GridLayout>



            </LinearLayout>

        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/navigation_menu"
            android:id="@+id/nav_view">

        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>

</android.support.constraint.ConstraintLayout>